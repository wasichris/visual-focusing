{
  "name": "visual-focusing",
  "version": "1.0.1",
  "description": "macOS 視窗方向切換工具",
  "main": "dist/main/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:icon && npm run build:renderer && npm run build:main",
    "build:icon": "cp src/renderer/assets/app.png assets/icon.png && npx electron-icon-builder --input=assets/icon.png --output=build-icons/ && cp build-icons/icons/mac/icon.icns assets/icon.icns",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:all": "npm run build && electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "keywords": [
    "electron",
    "window-manager",
    "productivity"
  ],
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "wait-on": "^9.0.4"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "node-window-manager": "^2.2.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
